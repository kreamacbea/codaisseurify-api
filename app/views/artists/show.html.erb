<div class="row">
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3><%= @artist.name %><span> : List of songs</span></h3>
      </div>

      <div class="panel-body">
          <div class="row">
            <div class="col-md-7">
              <% if @artist.songs.any? %>
                <ul id="song-list">
                  <% @artist.songs.each do |song| %>
                    <li class="song-list-title" id="title">
                      <%= song.title %></li>
                    <li class="song-list-length" id="length">
                      <%= song.length %></li>
                    <!-- <input type="submit" id="delete-song" value="Delete song"> -->
                    <%= link_to "Delete", artist_song_path(song.artist_id, song.id), method: :delete, data: { confirm: "Really wanna delete this song?" }, class: "btn btn-secondary warning" %>
                  <% end %>
                </ul>
              <% else %>
                <p class="warning">Whoops, it looks a little empty here. Add some nice songs, if you like...
                </p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <div>
      <%= link_to "Add song", new_artist_song_path(@artist), class: "btn btn-primary outside" %>
      <%= link_to "Back to overview", artists_path, class: "btn btn-default outside" %>
    </div>
  </div>
</div>
