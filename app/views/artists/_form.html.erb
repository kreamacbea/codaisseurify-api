<%= form_for(artist) do |f| %>
  <div class="form-group">
    <label>Artist name</label>
    <%= f.text_field :name, placeholder: "Name of the artist", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", artists_path, class: "btn btn-default" %>
  </div>
<% end %>
